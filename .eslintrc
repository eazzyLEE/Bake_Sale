{
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "chrome": true
    },
    "rules": {
        "no-console": 0,
        "no-empty": [1,{ "allowEmptyCatch": true }]
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "extends": "eslint:recommended"
}